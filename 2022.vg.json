{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 550,
  "title": "Average Max Temperature at 45 Weather Stations across Australia in 2022",
  "projection": {
    "type": "equalEarth",
    "center": [135, -25],  
    "scale": 800,             
    "clipExtent": [[0, 0], [600, 550]]  
  },
  "layer": [
    {
      "data": {
        "sphere": true  
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e0f7fa",  
        "stroke": "none"
      }
    },
    {
      "data": {"graticule": {"step": [10, 10]}},  
      "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 1}
    },
    {
      "data": {
        "url": "ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "states.geojson",
        "format": {
          "type": "json",
          "property": "features"
        }
      },
      "mark": {"type": "geoshape", "fill": "none", "stroke": "black", "strokeWidth": 1},
      "encoding": {
        "tooltip": {
          "field": "properties.STATE_NAME", 
          "type": "nominal",
          "title": "State Name"
        }  
      }
    },
    
    {
      "data": {
        "url": "max_temp_2022_02_27.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "color": {
          "field": "MaxTemp",
          "type": "quantitative",
          "title": "Max Temperature (°C)",
          "scale": {"scheme": "reds"}
        },
        "size": { 
          "value": 100  
        },
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "Weather Stattion"}, 
          {"field": "MaxTemp", "type": "quantitative", "title": "Max Temperature (°C)", "format": ".1f"}
        ]
      }
    }
  ]
}
